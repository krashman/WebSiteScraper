   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
        {
            "name": ".NET Core Launch (Shadow's Library)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceRoot}/WebSiteScraper.Core/bin/Debug/netcoreapp2.0/WebSiteScraper.Core.dll",
            "args": [ 
                "http://www.shadowsgovernment.com/shadows-library/",
                 "F:\\Data\\sites\\Shadow's Library" 
                ],
            "cwd": "${workspaceRoot}/WebSiteScraper.Core",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}